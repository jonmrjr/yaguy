# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8000

# Database
DATABASE_PATH=./database.sqlite

# JWT Secret (generate a secure random string in production)
JWT_SECRET=your-256-bit-secret-change-this-in-production
JWT_EXPIRES_IN=24h

# Stripe (use test keys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Email Configuration (Mock for development)
EMAIL_FROM=noreply@yaguy.com
ADMIN_EMAIL=admin@yaguy.com

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# SLA Times (in hours)
STANDARD_SLA_HOURS=24
URGENT_SLA_HOURS=6

# Pricing (in cents)
STANDARD_PRICE_CENTS=4900
URGENT_PRICE_CENTS=9900
